<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeProgressBar">
        <attr name="swipepb_inner_radius" format="dimension" />
        <attr name="swipepb_background_color" format="color" />
        <attr name="swipepb_progress_color" format="color" />
        <attr name="swipepb_progress_stoke_width" format="dimension" />
        <attr name="swipepb_show_arrow" format="boolean" />
        <attr name="swipepb_enable_circle_background" format="boolean" />
        <attr name="swipepb_arrow_width" format="dimension" />
        <attr name="swipepb_arrow_height" format="dimension" />
        <attr name="swipepb_progress" format="integer" />
        <attr name="swipepb_max" format="integer" />
        <attr name="swipepb_progress_text_size" format="dimension" />
        <attr name="swipepb_progress_text_color" format="color" />
        <attr name="swipepb_progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>

    <!--底部导航菜单-->
    <declare-styleable name="NavLayout">
        <attr name="nav_menuCount" format="integer" />
        <attr name="nav_selectColor" format="color" />
        <attr name="nav_defaultColor" format="color" />
        <attr name="nav_textSize" format="dimension" />
        <attr name="nav_pointColor" format="color" />
        <attr name="nav_msgColor" format="color" />
    </declare-styleable>

    <!--圆形ImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ProgressRingView">
        <attr name="pcv_ring_width" format="dimension" />
        <attr name="pcv_ring_bg_color" format="color" />
        <attr name="pcv_ring_color" format="color" />
        <attr name="pcv_ring_anim" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
        <attr name="arrowDrawable" format="reference|color"/>
        <attr name="dropDownListPaddingBottom" format="dimension"/>
        <attr name="backgroundSelector" format="integer"/>
        <attr name="textTint" format="color"/>
    </declare-styleable>

</resources>