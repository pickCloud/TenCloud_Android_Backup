<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_232730"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_remove_port"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_2f3543"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_del_opt" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="端口"
            android:textColor="@color/text_color_899ab6"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout style="@style/ListItemLLFirst">

        <LinearLayout style="@style/ListItemLL2">

            <TextView
                style="@style/ListItemTextKey"
                android:text="host" />

            <EditText
                android:id="@+id/et_host"
                style="@style/ListItemEditValue"
                android:hint="请输入" />

        </LinearLayout>

        <View style="@style/LineHorizontal2f3543" />

    </LinearLayout>



    <LinearLayout style="@style/ListItemLLFirst">

        <LinearLayout style="@style/ListItemLL2">

            <TextView
                style="@style/ListItemTextKey"
                android:text="path" />

            <EditText
                android:id="@+id/et_path"
                style="@style/ListItemEditValue"
                android:hint="请输入" />

        </LinearLayout>

        <View style="@style/LineHorizontal2f3543" />

    </LinearLayout>

    <LinearLayout style="@style/ListItemLLFirst">

        <RelativeLayout style="@style/ListItemLL2">

            <TextView
                style="@style/ListItemTextKey"
                android:layout_centerVertical="true"
                android:text="匹配服务" />

            <com.ten.tencloud.widget.StatusSelectPopView
                android:id="@+id/spv_match"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:gravity="right" />

        </RelativeLayout>

        <View style="@style/LineHorizontal2f3543" />

    </LinearLayout>






</LinearLayout>